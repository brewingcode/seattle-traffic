doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='Historical graphs of Seattle freeway traffic')
    //- uncomment if your site is responsive!
    //- meta(name="viewport" content="width=device-width, initial-scale=1")
    title traffic
    != css()

  body
    div(id='graph') // the graph will show here, zoomable
    div(id='controls') // controls for number of routes, specific day
    div(id='routes') // two dropdowns for begin and end town, and a button to swap them

    != js()